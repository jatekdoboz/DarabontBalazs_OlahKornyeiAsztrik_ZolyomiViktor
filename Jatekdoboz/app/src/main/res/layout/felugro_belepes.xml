<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    android:background="?attr/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/adminjelszo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="?attr/colorOnPrimary"
        android:text="Add meg a jelszót:"/>
    <EditText
        android:id="@+id/adminjelszo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorOnPrimary"
        android:textColor="?attr/colorPrimary"
        android:textColorHint="?attr/colorPrimary"
        android:textCursorDrawable="@null"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/menteskeret"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/adminjelszo"
        android:backgroundTint="?attr/colorSecondaryVariant"
        android:layout_marginTop="30dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <TextView
            android:id="@+id/mehet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Belépés"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:textSize="20dp"
            android:textColor="?attr/colorOnPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/kilepkeret"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/menteskeret"
        android:backgroundTint="?attr/colorOnSecondary"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <TextView
            android:id="@+id/kilépés"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kilépés"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:textSize="20dp"
            android:textColor="?attr/colorOnPrimary"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>